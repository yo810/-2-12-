<body>

<h1>Books</h1>

<table>
  <thead>
    <tr>

      <th>Title</th>

      <th>Body</th>

      <% @books.each do |book| %>

    </tr>
  </thead>

  <thead>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>

  </thead>
</table>

<% end %>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<div class="field">

  <ladel for="book_title">Title</ladel>
  <%= f.text_field :title %>

</div>

<div class="field">

  <ladel for="book_body">Body</ladel>
  <%= f.text_area :body %>

</div>

<div class="action">
  <%= f.submit 'Create Book' %>
<% end %>

</div>

</body>